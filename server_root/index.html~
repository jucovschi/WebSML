					<div id="te-sourceb" class="tab">
<textarea id='sourcecode'>(* Hello world in a different way *)
let
	fun writeAllChars(filename, ls) = 
		let
			val file = TextIO.openOut(filename)
			fun write([]) = (TextIO.closeOut(file); true)
			| write(h::t) = (TextIO.output1(file, h);write(t);true)
		in
			write(ls)
		end
		handle _ => false
in
	writeAllChars("hello.world.txt", explode("Hello World!"))
end</textarea>
